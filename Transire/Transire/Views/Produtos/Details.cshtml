@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
@model Transire.Models.Produto

<h5><span></span>  Produto</h5>
<hr />

<div>
    <form>
        <div class="form-group col-md-offset-2 ">
            <img src="@Url.Action("mostrar", "ImageRender", new { id = Model.Id})" style="width:auto; height:100px;" />
        </div>
        <div class="form-group col-md-offset-2 ">
            <label>@Html.DisplayNameFor(model => model.Nome)</label>
            <input type="text" class="form-control" readonly value="@Html.DisplayFor(model => model.Nome)" />
        </div>
        <div class="form-group col-md-offset-2 ">
            <label>@Html.DisplayNameFor(model => model.Categoria.Nome)</label>
            <input type="text" class="form-control" readonly value="@Html.DisplayFor(model => model.Categoria.Nome)" />
        </div>
        <div class="form-group col-md-offset-2 ">
            <label>@Html.DisplayNameFor(model => model.Descricao)</label>
            <input type="text" class="form-control" readonly value="@Html.DisplayFor(model => model.Descricao)" />
        </div>
        <div class="form-group col-md-offset-2 ">
            <label>@Html.DisplayNameFor(model => model.Preco)</label>
            <input type="text" class="form-control" readonly value="@Html.DisplayFor(model => model.Preco)" />
        </div>
    </form>
</div>
<div class="col-md-12 text-right">
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-outline-secondary" }) | @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-primary" })

</div>
<br />