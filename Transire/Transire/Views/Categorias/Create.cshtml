@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
@model Transire.Models.Categoria

<h5><span ></span> Nova Categoria</h5>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group col-md-offset-2 ">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label " })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12 text-right">
            @Html.ActionLink("Voltar", "Index", null, new { @class= "btn btn-outline-secondary"})
            <input type="submit" value="Salvar" class="btn btn-outline-primary" />
        </div>
    </div>



}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
